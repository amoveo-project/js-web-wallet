{
  "name": "amoveo-js-wallet",
  "version": "1.0.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "dependencies": {
    "@ledgerhq/hw-transport-u2f": "^4.35.0",
    "@reach/router": "1.2.1",
    "amoveo-js-light-node": "0.3.0",
    "clipboard": "2.0.4",
    "date-fns": "2.0.0-alpha.25",
    "decimal.js-light": "^2.5.0",
    "electron-is-dev": "1.0.1",
    "ethers": "^4.0.26",
    "hw-app-veo": "0.3.2",
    "lodash": "4.17.11",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "styled-components": "^4.1.3",
    "what-input": "5.1.3"
  },
  "devDependencies": {
    "electron": "^4.0.5",
    "electron-builder": "20.38.5",
    "electron-devtools-installer": "2.2.4",
    "eslint-plugin-react-hooks": "^1.2.0",
    "husky": "^1.3.1",
    "jest-dom": "^3.1.2",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "react-scripts": "^2.1.5",
    "react-testing-library": "^6.0.0"
  },
  "scripts": {
    "build": "react-scripts build",
    "dist": "npx build --x64 --macos --win --linux --c.extraMetadata.main=build/electron.js -p always",
    "dist-osx": "npx build --x64 --macos --c.extraMetadata.main=build/electron.js -p always",
    "dist-winlin": "npx build --x64 --win --linux --c.extraMetadata.main=build/electron.js -p always",
    "electron": "electron .",
    "pack": "electron-builder --dir",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "eslintConfig": {
    "extends": "react-app",
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "build": {
    "appId": "io.amoveo.wallet",
    "compression": "normal",
    "productName": "Amoveo Wallet",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "icon": "icon.icns",
      "type": "distribution",
      "target": [
        "pkg",
        "dmg"
      ],
      "category": "public.app-category.finance",
      "publish": {
        "provider": "s3",
        "bucket": "amoveo-wallet",
        "path": "/release/osx/"
      }
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icon.ico",
      "publish": {
        "provider": "s3",
        "bucket": "amoveo-wallet",
        "path": "/release/win/"
      }
    },
    "linux": {
      "target": [
        "snap",
        "AppImage"
      ],
      "description": "Amoveo Wallet",
      "category": "Finance",
      "publish": {
        "provider": "s3",
        "bucket": "amoveo-wallet",
        "path": "/release/linux/"
      }
    }
  }
}
